FROM node:18

# Set the timezone so that the logs are in the correct timezone
ENV TZ=America/New_York
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

WORKDIR /usr/src/app

COPY tsconfig.json .
COPY package*.json .

RUN npm install

ENTRYPOINT ["npm", "run", "start:dev"]